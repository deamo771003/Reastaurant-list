<div class="ms-5 me-5 mt-3">
  {{> message}}
  <form class="row g-3" action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <div class="col-md-4">
      <label for="validationServer01" class="form-label">餐廳名稱<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <input type="name" class="form-control" id="validationServer01" placeholder="name" name="name"
        value="{{restaurant.name}}" required>
    </div>

    <div class="col-md-3">
      <label for="validationServer02" class="form-label">餐廳類別<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <select class="form-select" id="validationServer02" aria-describedby="validationServer02Feedback" selectedIndex=""
        name="category" required>
        <option value="Choose" disabled>Choose...</option>
        {{#each category}}
        {{#if (eq this ../restaurant.category)}}
        <option value="{{this}}" selected>{{this}}</option>
        {{else}}
        <option value="{{this}}">{{this}}</option>
        {{/if}}
        {{/each}}
      </select>
    </div>

    <div class="col-md-3">
      <label for="validationServer09" class="form-label">城市<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <select class="form-select" id="validationServer09" aria-describedby="validationServer09Feedback" selectedIndex=""
        name="city" required>
        <option selected disabled value="">Choose...</option>
        {{#each newCity}}
        {{#if (eq this ../restaurant.city)}}
        <option value="{{this}}" selected>{{this}}</option>
        {{else}}
        <option value="{{this}}">{{this}}</option>
        {{/if}}
        {{/each}}
      </select>
    </div>

    <div class="col-md-4">
      <label for="validationServer03" class="form-label">地址<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <input type="text" class="form-control" id="validationServer03" placeholder="台北市北北區南南路123號3F" name="location"
        value="{{restaurant.location}}" required>
    </div>

    <div class="col-md-4">
      <label for="validationServer04" class="form-label">電話號碼<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <input type="text" class="form-control" id="validationServer04" name="phone" value="{{restaurant.phone}}"
        required>
    </div>

    <div class="col-md-4">
      <label for="validationServer05" class="form-label">介紹<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <input type="text" class="form-control" id="validationServer05" name="description"
        value="{{restaurant.description}}" required>
    </div>

    <div class="col-md-4">
      <label for="validationServer06" class="form-label">照片網址<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <input type="text" class="form-control" id="validationServer06" name="image" value="{{restaurant.image}}"
        required>
    </div>

    <div class="col-md-4">
      <label for="validationServer07" class="form-label">Google Map 網址<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <input type="text" class="form-control" id="validationServer07" name="google_map"
        value="{{restaurant.google_map}}" required>
    </div>

    <div class="col-md-3">
      <label for="validationServer08" class="form-label">1-5星評分<span class="ms-1"
          style="color: brown; font-size:5px;">*必填</span></label>
      <select class="form-select" id="validationServer08" aria-describedby="validationServer08Feedback" selectedIndex=""
        name="rating" required>
        <option selected disabled value="">Choose...</option>
        {{#each newRating}}
        {{#if (eq this ../restaurant.rating)}}
        <option value="{{this}}" selected>{{this}}</option>
        {{else}}
        <option value="{{this}}">{{this}}</option>
        {{/if}}
        {{/each}}
      </select>
    </div>

    <div class="col-12">
      <button class="btn btn-success submit-button" type="submit">Submit</button>
      <a href="/restaurants/{{restaurant._id}}">
        <button class="btn btn-secondary cancel-button" type="button">Cancel</button>
      </a>
    </div>
  </form>
</div>