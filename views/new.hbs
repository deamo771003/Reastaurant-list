<div class="ms-5 me-5 mt-3">
  <form class="row g-3" action="/restaurants" method="POST">
    <div class="col-md-4">
      <label for="validationServer01" class="form-label">餐廳名稱</label>
      <input type="name" class="form-control" id="validationServer01" placeholder="name" name="name" required>
      <div id="validationServer01Feedback" class="valid-feedback">
        Looks good!
      </div>
      <div id="validationServer01Feedback" class="invalid-feedback">
        Input error!
      </div>
    </div>
    <script>
      const input = document.getElementById('validationServer01')
      input.classList.add('is-invalid')
      input.addEventListener("change", function () {
        if (input.value.length > 0) {
          input.classList.remove('is-invalid')
          input.classList.add('is-valid')
        } else {
          input.classList.remove('is-valid')
          input.classList.add('is-invalid')
        }
      })
    </script>

    <div class="col-md-3">
      <label for="validationServer02" class="form-label">餐廳類別</label>
      <select class="form-select" id="validationServer02" aria-describedby="validationServer02Feedback" selectedIndex=""
        name="category" required>
        <option selected disabled value="">Choose...</option>
        {{#each newCategory}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
      <div id="validationServer02Feedback" class="valid-feedback">
        Looks good!
      </div>
      <div id="validationServer02Feedback" class="invalid-feedback">
        Please select a valid state.
      </div>
    </div>
    <script>
      const select = document.getElementById('validationServer02')
      select.classList.add('is-invalid')
      select.addEventListener("change", function () {
        if (select.selectedIndex > -1) {
          select.classList.remove('is-invalid')
          select.classList.add('is-valid')
        } else {
          select.classList.remove('is-valid')
          select.classList.add('is-invalid')
        }
      })
    </script>

    <div class="col-md-4">
      <label for="validationServer03" class="form-label">地址</label>
      <input type="text" class="form-control" id="validationServer03" value="" placeholder="台北市北北區南南路123號3F"
        name="location" required>
      <div id="validationServer02Feedback" class="valid-feedback">
        Looks good!
      </div>
      <div id="validationServer02Feedback" class="invalid-feedback">
        Input error!
      </div>
      <script>
        const inputAddress = document.getElementById('validationServer03')
        inputAddress.classList.add('is-invalid')
        inputAddress.addEventListener("change", function () {
          if (inputAddress.value.length > 0) {
            inputAddress.classList.remove('is-invalid')
            inputAddress.classList.add('is-valid')
          } else {
            inputAddress.classList.remove('is-valid')
            inputAddress.classList.add('is-invalid')
          }
        })
      </script>
    </div>
    <div class="col-md-4">
      <label for="validationServer04" class="form-label">手機號碼</label>
      <input type="number" class="form-control" id="validationServer04" value="" placeholder="EX: 0912123456"
        name="phone" required>
      <div id="validationServer04Feedback" class="valid-feedback">
        Looks good!
      </div>
      <div id="validationServer04Feedback" class="invalid-feedback">
        Input error!
      </div>
      <script>
        const inputTel = document.getElementById('validationServer04')
        inputTel.classList.add('is-invalid')
        inputTel.addEventListener("change", function () {
          if (inputTel.value.length >= 10) {
            inputTel.classList.remove('is-invalid')
            inputTel.classList.add('is-valid')
          } else {
            inputTel.classList.remove('is-valid')
            inputTel.classList.add('is-invalid')
          }
        })
      </script>
    </div>

    <div class="col-md-4">
      <label for="validationServer05" class="form-label">介紹</label>
