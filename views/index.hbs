<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="card-row">
          <div class="card mb-3">
            <img class="card-img-top p-1" src="{{this.image}}" alt="{{name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="index-button mt-1 row-cols-sm-1" style="text-align: right;">
                <form action="/restaurants/{{this._id}}/delete?_method=DELETE" method="POST">
                  <a class="index-edit-button" href="/restaurants/{{this._id}}/edit" style="margin-right: 5px;">
                    <i class="fa-solid fa-pen-to-square"></i>
                    Edit
                  </a>

                  <a href="/restaurants/{{this._id}}" class="index-detail-button">
                    <i class="fa-solid fa-circle-info"></i>
                    Detail
                  </a>

                  <button class="index-delete-button" type="submit">
                    <i class="fa-solid fa-trash-can"></i>
                    Delete
                  </button>
                </form>
              </div>

            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>