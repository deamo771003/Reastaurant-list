              <a class="navbar-brand me-4" href="/users/logout">
                <i class="fa-solid fa-right-from-bracket"></i>
                LOGOUT
              </a>
            </li>
            {{else}}
            <li class="nav-item mt-2">
              <a class="navbar-brand me-4" href="/users/login">
                <i class="fa-solid fa-right-to-bracket"></i>
                LOGIN
              </a>
            </li>
            {{/if}}
