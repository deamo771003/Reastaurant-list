<div class="row" style="margin-top: -60px;">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label class="mb-2" for="email">Email</label>
          <input type="text" id="email" name="email" class="form-control" placeholder="abc123@qmail.com..." required>
        </div>
        <div class="mb-3">
          <label class="form-label mb-2" for="password">Password</label>
          <input class="form-control" type="password" id="password01" name="password" placeholder="password..."
            required>
        </div>
        <div class="text-center d-grid gap-2">
          <button type="submit" class="btn btn-primary btn-block">Login</button>
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        </div>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register" style="text-decoration: none;">Register</a>
      </p>

    </div>
  </div>
</div>